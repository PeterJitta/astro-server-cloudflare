---


interface Post {
  id: string
  title: {
    rendered: string
  }
  excerpt: {
    rendered: string
  }
  date: string
}

// Fetch posts server-side for each request
let posts: Post[] = []
try {
  const response = await fetch('https://solar.datayolk.net/wp-json/wp/v2/posts')
  if (response.ok) {
    posts = await response.json()
  }
} catch (error) {
  console.error('Error fetching posts:', error)
}

// Add cache headers for better performance
Astro.response.headers.set('Cache-Control', 'public, max-age=60')
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: white;
        color: #1a1a1a;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
      }
      h1 {
        margin-bottom: 2rem;
        color: #1a1a1a;
      }
      .post-list {
        list-style: none;
        padding: 0;
      }
      .post-item {
        border-bottom: 1px solid #eee;
        padding: 1.5rem 0;
      }
      .post-item:last-child {
        border-bottom: none;
      }
      .post-title {
        margin: 0 0 0.5rem 0;
      }
      .post-title a {
        color: #1a1a1a;
        text-decoration: none;
      }
      .post-title a:hover {
        color: #0066cc;
      }
      .post-excerpt {
        color: #666;
        line-height: 1.6;
      }
      .post-date {
        color: #999;
        font-size: 0.9rem;
        margin-top: 0.5rem;
      }
    </style>
  </head>
  <body>
    <main class="container">
      <h1>Blog Posts</h1>
      <ul class="post-list">
        {posts.map((post) => (
          <li class="post-item">
            <h2 class="post-title">
              <a href={`/blog/${post.id}`}>{post.title.rendered}</a>
            </h2>
            <div class="post-excerpt" set:html={post.excerpt.rendered} />
            <div class="post-date">
              {new Date(post.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
          </li>
        ))}
      </ul>
    </main>
  </body>
</html>