---


interface Post {
  id: string
  title: {
    rendered: string
  }
  content: {
    rendered: string
  }
}

const { id } = Astro.params

// Fetch the post data server-side for each request
let post: Post | null = null
try {
  const response = await fetch(`https://solar.datayolk.net/wp-json/wp/v2/posts/${id}`)
  if (response.ok) {
    post = await response.json()
  }
} catch (error) {
  console.error('Error fetching post:', error)
}

// Return 404 if post not found
if (!post) {
  return Astro.redirect('/404', 404)
}

// Add cache headers for better performance (60 seconds)
Astro.response.headers.set('Cache-Control', 'public, max-age=60')
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{post.title.rendered}</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
      }
      h1 {
        color: #1a1a1a;
        margin-bottom: 1.5rem;
        line-height: 1.2;
      }
      .content {
        line-height: 1.6;
        color: #333;
      }
      .content p {
        margin-bottom: 1rem;
      }
      .content img {
        max-width: 100%;
        height: auto;
      }
    </style>
  </head>
  <body class="bg-white w-full min-h-screen text-black">
    <main class="container">
      <h1>{post.title.rendered}</h1>
      <div class="content" set:html={post.content.rendered} />
    </main>
  </body>
</html>